@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<body>
    <div id="root"></div>
    <h1>Chef Privé</h1>
    <div class="flexsearch">
        <div class="flexsearch--wrapper">
            <form class="flexsearch--form" action="#" method="post">
                <div class="flexsearch--input-wrapper">
                    <input id="ingredients" class="flexsearch--input" type="search" placeholder="Enter ingredients (separated by commas)"
                           @*oninput="SearchRecipes()"*@>
                </div>
                <input class="flexsearch--submit" type="submit" value="&#10140;" />
            </form>
        </div>
    </div>

    <br><br><br><br><br><br><br><br>
    <div class="form-container">
        <form action="recipes" style="display:inline-block" title="My Recipes">
            <input type="image" src="~/images/bowl1.png" width="200" height="200" />
        </form>
        <form action="recipes/mealplan" style="display:inline-block" title="My Meal Plan">
            <input type="image" src="~/images/bowl2.png" width="200" height="200" />
        </form>
        <form action="ingredients/shoppinglist" style="display:inline-block" title="My Shopping List">
            <input type="image" src="~/images/bowl3.png" width="200" height="200" />
        </form>

        <form action="ingredients/index" style="display:inline-block" title="My Pantry">

            <input type="image" src="~/images/bowl4.png" width="200" height="200" />
        </form>
        <form action="recipes/favorites" style="display:inline-block" title="My Favorites">
            <input type="image" src="~/images/bowl5.png" width="200" height="200" />
        </form>
    </div>

</body>
</html>

